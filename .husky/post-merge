# Set the package manager to use
if command -v pnpm >/dev/null 2>&1; then
  PM="pnpm"
elif command -v yarn >/dev/null 2>&1; then
  PM="yarn"
else
  PM="npm"
fi

# Install dependencies
if ! "$PM" install; then
  echo "‚ùå Failed to install dependencies with $PM. Aborting post-merge hook."
  exit 1
fi